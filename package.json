{
  "name": "gamecompare-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run install:deps && npm run pre-build && next build && npm run validate:post-build",
    "build:production": "npm run install:deps && npm run pre-build && next build && npm run validate:post-build",
    "build:vercel": "npm ci --include=dev && npm run pre-build && next build && npm run validate:post-build",
    "build:monitored": "npm run monitor:build",
    "start": "next start",
    "lint": "next lint",
    "install:deps": "npm ci --include=dev",
    "pre-build": "node scripts/pre-build-validation.js",
    "validate:typescript": "node scripts/typescript-check.js",
    "validate:eslint": "node scripts/eslint-check.js",
    "validate:security": "node scripts/validate-security.js",
    "validate:build-config": "node scripts/build-config-validator.js",
    "validate:post-build": "node scripts/post-build-validator.js",
    "validate:all": "npm run validate:eslint && npm run validate:security",
    "monitor:build": "node scripts/build-monitor.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:build-validation": "jest scripts/__tests__/build-validation.test.js --verbose",
    "test:build-pipeline": "jest scripts/__tests__/build-pipeline.integration.test.js --verbose",
    "test:vercel-build": "node scripts/test-vercel-build.js",
    "validate:vercel-schema": "node scripts/validate-vercel-schema.js",
    "test:deployment": "npm run test:build-validation && npm run validate:vercel-schema",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headless": "cypress run --headless",
    "test:performance": "cypress run --spec 'cypress/e2e/performance.cy.ts'",
    "test:all": "npm run test && npm run test:deployment && npm run test:e2e:headless",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:deploy": "supabase functions deploy"
  },
  "engines": {
    "node": ">=18.0.0 <25.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^1.1.2",
    "@supabase/supabase-js": "^2.39.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "next": "^14.2.30",
    "openai": "^4.24.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.5",
    "@lhci/cli": "^0.15.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.4.16",
    "chrome-launcher": "^1.2.0",
    "cypress": "^14.5.2",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-fetch-mock": "^3.0.3",
    "lighthouse": "^12.8.0",
    "nyc": "^17.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.0",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
